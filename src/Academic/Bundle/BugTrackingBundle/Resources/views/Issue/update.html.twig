{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEntityConfigBundle::macros.html.twig' as entityConfig %}


{% oro_title_set({
titleTemplate : "%entity% - %code%",
params : {
"%entity%": 'academic.bugtracking.issue.entity_label'|trans,
"%code%": entity.code|default('N/A')|trans,
}
}) %}

{% set formAction = entity.id ? path('academic_bug_tracking_update', { 'id': entity.id }) : path('academic_bug_tracking_create') %}

{% block navButtons %}
    {{ parent() }}

    {{ UI.cancelButton(path('academic_bug_tracking_index')) }}

    {% set html = UI.saveAndCloseButton({
    'route': 'academic_bug_tracking_index',
    }) %}

    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if entity.id %}
        {% set breadcrumbs = {
        'entity':      entity,
        'indexPath':   path('academic_bug_tracking_index'),
        'indexLabel': 'academic.bugtracking.issue.entity_plural_label'|trans,
        'entityTitle': entity.code
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'academic.bugtracking.issue.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block breadcrumb %}
    {% set breadcrumbs = [
    {'label': 'academic.bugtracking.issue.entity_plural_label'|trans },
    {'label': entity.code|default('N/A')|trans }
    ] %}
    {% include 'OroNavigationBundle:Menu:breadcrumbs.html.twig' %}
{% endblock breadcrumb %}

{% block content_data %}
    {% if isWidgetContext %}
        <script type="text/javascript">
            require(['oroui/js/widget-manager', 'oroui/js/messenger'],
                    function (widgetManager, messenger) {
                        widgetManager.getWidgetInstance(
                                {{ app.request.get('_wid')|json_encode|raw }},
                                function (widget) {
                                    widget.on('formSave', function () {
                                        if (widget.disposing) {
                                            return false;
                                        }
                                        var message = '{{ 'academic.bugtracking.issue.saved_message'|trans }}';
                                        messenger.notificationFlashMessage('success', message);
                                        widget.remove();
                                    });
                                }
                        );
                    });
        </script>
    {% endif %}
    {% set id = 'issue-edit' %}
    {% set formData = [
    form_row(form.code),
    form_row(form.summary),
    form_row(form.description)
    ] %}

    {% if form.type is defined %}
        {% set formData = formData|merge([form_row(form.type)]) %}
    {% else %}
        {% set formData = formData|merge([form_row(form.parent)]) %}
    {% endif %}

    {% set formData =
    formData|merge([
    form_row(form.priority),
    form_row(form.resolution),
    form_row(form.assignee),
    form_row(form.reporter),
    form_rest(form)
    ]) %}

    {% set dataBlocks = [{
    'title': 'academic.bugtracking.block.general'|trans,
    'class': 'active',
    'subblocks': [{
    'title': '',
    'data': formData
    }]
    }] %}

    {% set data = {
    'formErrors': form_errors(form),
    'dataBlocks': dataBlocks
    } %}

    {{ parent() }}
{% endblock content_data %}
